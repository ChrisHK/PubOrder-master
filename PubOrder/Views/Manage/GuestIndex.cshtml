@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Create an Account";
}

        <!-- breadcam_area_start -->
        <div class="breadcam_area breadcam_bg_1 zigzag_bg_2">
            <div class="breadcam_inner">
                <div class="breadcam_text">
                    <h3>@ViewBag.Title</h3>
                    <p>@ViewBag.StatusMessage<br></p>
                </div>
            </div>
        </div>
        <!-- breadcam_area_end -->
        <!-- order_area_start -->
        <div class="order_area">
            <div class="container">
                @if (Request.IsAuthenticated)
                {

                    <p>
                        You are signed in as a Guest
                    </p>
                    <p>
                        Please logout and create an account with us.
                    </p>




                    using (Html.BeginForm("LogOffAndRegister", "Account", FormMethod.Post, new { id = "logoutForm" }))
                    {
                        @Html.AntiForgeryToken()

                        <div class="panel panel-primary">
                            <div class="panel-heading">
                                <h3 class="panel-title">Benefits of signing up.</h3>
                            </div>
                            <div class="panel-body">

                                <ul class="list-group">
                                    <li class="list-group-item">
                                        <span class="badge">1</span>
                                        Your information will automatically get filled out when you order in the future.
                                    </li>
                                    <li class="list-group-item">
                                        <span class="badge">2</span>
                                        You will have a more convinent peersonilized experience.
                                    </li>
                                    <li class="list-group-item"><a href="javascript:document.getElementById('logoutForm').submit()">Log off and create your own account.</a></li>
                                </ul>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <ul class="list-group">
                        <li class="list-group-item"><span class="badge">1</span>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                        <li class="list-group-item">@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
                    </ul>
                }
            </div>
        </div>